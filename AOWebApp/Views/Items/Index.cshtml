<form asp-controller="Items" asp-action="Index" method="post" class="row g-2">
    <div class="col-4">
        <input asp-for="SearchText" type="text" value="@Model.SearchText" class="form-control" placeholder="Item search..." title="Search by item name. Max 100 chars." />
    </div>

    <div class="col-3">
        <select asp-for="CategoryId" class="form-select" title="View items for a specific category." asp-items="@Model.CategoryList">
            <option value="">All Categories...</option>
        </select>
    </div>

    <div class="col-2">
        <select name="SortOrder" class="form-select">
            <option value="" selected>Item Name [asc]</option>
            <option value="name_desc">Item Name [desc]</option>
            <option value="price_asc">Item Price [asc]</option>
            <option value="price_desc">Item Price [desc]</option>
        </select>
    </div>

    <div class="col-3 d-flex gap-2">
        <input type="submit" value="Search" class="btn btn-outline-primary" />
        <a asp-controller="Items" asp-action="Index" class="btn btn-outline-danger">Reset</a>
        <a class="btn btn-outline-info" asp-action="Create">Create New</a>
    </div>
</form>





<p><small class="text-muted">@Model.ItemList.Count() items found.</small></p>

<div class="row justify-content-center">
    @if (Model.ItemList.Count() > 0)
    {
        @foreach (var item in Model.ItemList)
        {
            <div class="card col-3 m-1 p-2 d-flex flex-wrap align-items-center">
                <div class="card-body">
                    <h4 class="card-title">@item.TheItem.ItemName</h4>
                    <p class="card-text">@((item.TheItem.ItemDescription?.Length > 100) ? item.TheItem.ItemDescription.Substring(0, 100) + "..." : item.TheItem.ItemDescription)</p>
                    <p class="card-text">Cost: @item.TheItem.ItemCost.ToString("C")</p>
                    <p class="card-text">Rating: @if (item.ReviewCount > 0)
                        {
                            <span>@item.AverageRating.ToString("N1")</span>
                        }
                        else
                        {
                            <span>This item has not been reviewed</span>
                        }
                    </p>
                    <img src="@item.TheItem.ItemImage" class="card-img-top w-50 mb-2" alt="@item.TheItem.ItemName image" />
                    <a asp-action="Details" asp-route-id="@item.TheItem.ItemId" class="btn btn-primary">View Item Detail</a>
                </div>
            </div>
        }
    }
    else
    {
        <h1 class="text-danger">No items found!</h1>
        <h3>
            There are no items in the database that match your search, 
            please try searching again.
        </h3>
    }
</div>